{
  "name": "@kronos-integration/service-ldap",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.10.0",
  "exports": {
    ".": "./src/service-ldap.mjs"
  },
  "description": "ldap auth service",
  "keywords": [
    "kronos-service",
    "ldap"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src**/*.mjs",
    "lint": "node --run lint:docs",
    "lint:docs": "documentation lint ./src**/*.mjs"
  },
  "dependencies": {
    "@kronos-integration/endpoint": "^11.0.25",
    "@kronos-integration/service": "^15.5.2",
    "ldapts": "^8.1.6",
    "pacc": "^9.2.5"
  },
  "devDependencies": {
    "@kronos-integration/test-interceptor": "^7.0.32",
    "ava": "^6.4.1",
    "c8": "^11.0.0",
    "documentation": "^14.0.3",
    "ldif": "^0.5.1",
    "semantic-release": "^25.0.3"
  },
  "engines": {
    "node": ">=24.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kronos-Integration/service-ldap.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-ldap/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-ldap#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-component"
    ]
  }
}
